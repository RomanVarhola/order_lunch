- if notice
  .alert.alert-success
    %p#notice= notice
%p
  %b Ім'я:
  = @user.first_name
%p
  %b Прізвище:
  = @user.last_name
- if current_user && current_user.admin?
  %p
    %b Роль:
    = @user.role
= link_to 'Edit', edit_user_path(@user)
|
= link_to 'Back', users_path

-if @orders.present?
  %h1 My orders
  %table.table.table-bordered
    %thead
      %tr
        %th #
        %th Food
        %th Drink
        %th Date
        %th{:colspan => "3"}
    %tbody
      - @orders.each do |order|
        /- binding.pry
        %tr
          %td= order.id
          %td= "#{order.foods.first.title} #{order.foods.first.price} $" if order.foods.present?
          %td= "#{order.drinks.first.title} #{order.drinks.first.price} $" if order.drinks.present?
          %td= order.date
          %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
